<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.financemanager.view.TransactionEditDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="编辑交易记录">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <GridPane hgap="10.0" vgap="10.0">
        <Label text="类型:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <HBox spacing="10.0" GridPane.rowIndex="0" GridPane.columnIndex="1">
            <ToggleButton fx:id="expenseToggleButton" text="支出">
                <toggleGroup>
                    <ToggleGroup fx:id="typeToggleGroup" />
                </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="incomeToggleButton" text="收入" toggleGroup="$typeToggleGroup" />
        </HBox>

        <Label text="金额:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="amountField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="日期:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="250.0"/>

        <Label text="类别:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <ComboBox fx:id="categoryComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="250.0"/>

        <Label fx:id="aiSuggestionLabel" text="AI 建议分类: [建议]" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-font-style: italic; -fx-text-fill: #0077CC;"/>
        
        <Label fx:id="paymentMethodLabel" text="支付方式:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <ComboBox fx:id="paymentMethodComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="250.0"/>

        <Label text="描述:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <TextField fx:id="descriptionField" GridPane.rowIndex="6" GridPane.columnIndex="1" />
    </GridPane>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
        <Button fx:id="saveButton" text="保存" onAction="#handleSaveAction" defaultButton="true"/>
        <Button fx:id="cancelButton" text="取消" onAction="#handleCancelAction" cancelButton="true"/>
    </HBox>
</VBox>
